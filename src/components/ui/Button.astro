---
const { type } = Astro.props;
const isPrimary = type === 'primary';
---

<button
  type="button"
  class={`relative group overflow-hidden rounded-md h-12 px-4 duration-300 ${isPrimary ? 'bg-green-800' : 'bg-green-200'}`}
>
  <div
    aria-hidden="true"
    class={`transition duration-300 group-hover:-translate-y-12 font-medium ${isPrimary ? 'text-green-200' : 'text-green-700'}`}
  >
    <div class="h-12 flex items-center"><span>{isPrimary ? 'Primary' : 'Secondary'}</span></div>
    <div class="h-12 flex items-center justify-between w-full">
      <span>Button </span>
      <span aria-hidden="true">â†’</span>
    </div>
  </div>
</button>
