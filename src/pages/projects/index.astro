---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');

const metadata = {
  title: "Projects",
  description: "Selamat datang di halaman tentang kami.",
};
---

<Layout title={metadata.title} description={metadata.description}>
  <div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold mb-6">Projects</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        projects.map((project: any) => (
          <a
            href={`/projects/${project.slug}`}
            class="block bg-white shadow-lg rounded-lg p-4 hover:bg-gray-50 transition"
          >
            <h2 class="text-xl font-semibold mb-2">{project.data.title}</h2>
            <p class="text-gray-600">{project.data.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
